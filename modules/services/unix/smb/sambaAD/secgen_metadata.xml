<?xml version="1.0"?>

<service xmlns="http://www.github/cliffe/SecGen/service"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.github/cliffe/SecGen/service">
  <name>Samba file share Server</name>
  <author>Carpentier Pierre-Francois</author>
  <author>Alix Hiscock</author>
  <description>An installation of Samba which includes Active Directory functionality </description>

  <type>smb</type>
  <platform>linux</platform>

  <!--optional details-->
  <reference>https://forge.puppet.com/modules/kakwa/samba</reference>
  <software_name>sambaAD</software_name>
  <software_license>Apache v2</software_license>

  <!--Cannot co-exist with other samba installations-->
  <conflict>
    <software_name>samba</software_name>
  </conflict>

  <conflict>
    <name>.*Stretch.*</name>
  </conflict>
  <conflict>
    <name>.*Kali.*</name>
  </conflict>

  <requires>
    <type>update</type>
  </requires>

</service>